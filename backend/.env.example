NODE_ENV=development
PORT=5000
JWT_SECRET=replace-me

# Database (Supabase)
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-key

# Square Payment Integration (primary payment method)
# Get these from Square Developer Dashboard: https://developer.squareup.com/
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_ENVIRONMENT=sandbox

# Stripe Payment Integration (optional fallback)
STRIPE_SECRET_KEY=replace-with-stripe-key
STRIPE_WEBHOOK_SECRET=replace-with-stripe-webhook

# Enable mock payments for development (set to true to skip real payments)
MOCK_PAYMENTS=false

FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=your-secure-password

# Instagram Feed Integration (optional)
# Get these from Meta Business Suite / Instagram Basic Display API
# https://developers.facebook.com/docs/instagram-basic-display-api
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_USER_ID=

# SMTP Email Configuration
# For Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
# For other providers: Use your SMTP credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@playfunia.com
SMTP_FROM_NAME=Playfunia

